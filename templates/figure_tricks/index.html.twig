{% extends 'base.html.twig' %}

{% block title %}Créer une figure{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container-fluid rounded ajout-figure d-flex justify-content-center align-items-center flex-column main my-2">
        <h1>Ajouter une figure</h1>
        {{ form_errors(form) }}
        {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.description) }}
            {{ form_row(form.categorie) }}
            <div class="my-5  d-flex justify-content-center align-items-center flex-column">
                <div class="form-group my-2">
                    <ul class="tags image"
                        data-index="{{ form.image|length }}"
                        data-prototype="{{ form_widget(form.image.vars.prototype)|e('html_attr') }}">
                        <p>{{ form_row(form.image) }}</p>   
                    </ul>
                    <button type="button" class="btn btn-primary btn-sm add_item_link" data-collection-holder-class="image"> Ajouter une image</button>
                </div>
                <div class="form-group my-2">
                <button type="button" class="btn btn-secondary btn-sm add_item_link" data-collection-holder-class="videos">Ajouter une video</button>  
                    <ul class="tags videos"
                        data-index="{{ form.videos|length }}"
                        data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">
                            <p>{{ form_row(form.videos) }}</p>
                    </ul>  
                </div>
                <button type="submit" class="btn btn-dark btn-sm  align-self-center">Créer ma figure</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
